<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>sql</id>
    <formats>
        <!-- we use jar here so we don't have to create zip and tar.gz -->
        <format>jar</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>src/main/sql</directory>
            <outputDirectory>src/main/sql</outputDirectory>
            <includes>
                <include>**/*.sql</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/generated/sql</directory>
            <outputDirectory>src/generated/sql</outputDirectory>
            <includes>
                <include>**/*.sql</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <!-- include the POM so that assembly does not fail if we don't have any SQL files to include -->
            <source>pom.xml</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>

</assembly>
